@model ICollection<Category>

<div id="main">
    <div class="card">
        <div class="card-body">
            <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
                <div class="dataTable-top">
                    <div class="row">
                        <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-primary mb-4 col-3" style="float:right;">
                            <i class="bi bi-plus-lg"></i>  Yeni Kategori Ekle
                        </a>
                    </div>
                    <div class="dataTable-container row">
                        <table class="table table-striped dataTable-table" id="table1">
                            <thead>
                                <tr>
                                    <th data-sortable="" style="width: 34.9973%;"><a href="#" class="dataTable-sorter">Kategori Adı</a></th>
                                    <th data-sortable="" style="width: 11.2676%;"><a href="#" class="dataTable-sorter">Yazar Adı</a></th>
                                    <th data-sortable="" style="width: 5.7612%;"><a href="#" class="dataTable-sorter">Durum</a></th>
                                    <th data-sortable="" style="width: 5.7612%;"><a href="#" class="dataTable-sorter"></a></th>
                                    <th data-sortable="" style="width: 5.7612%;"><a href="#" class="dataTable-sorter"></a></th>

                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>@category.Author.Name</td>
                                        @if (category.IsPublish == true)
                                        {
                                            <td>
                                                <span class="badge bg-light-success">Aktif</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge bg-light-danger">Pasif</span>
                                            </td>
                                        }
                                        <td>
                                            <a class="btn btn-primary me-1 mb-1" asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id">
                                                <i class="bi bi-pencil-square"></i> Duzenle
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-secondary me-1 mb-1" asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id">
                                                <i class="bi bi-trash3"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>





