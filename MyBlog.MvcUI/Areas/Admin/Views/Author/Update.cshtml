@model AuthorUpdateVM

<div id="main">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title"> @Model.Name @Model.Surname Yazarını Düzenle</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form class="form form-horizontal" method="post" asp-action="Update" asp-controller="Author" asp-area="Admin" enctype="multipart/form-data">
                    <div class="form-body">
                        <div class="row">
                            <div class="form-group">
                                <div class="position-relative">
                                    <input type="text" class="form-control" id="first-name-icon" asp-for="@Model.Id" hidden>
                                </div>
                            </div>
                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label>Yazar Resmi</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input class="form-control" type="file" id="formFile" asp-for="@Model.ImageFile">

                                </div>
                            </div>
                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label>Yazar Adı</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input type="text" class="form-control" id="first-name-icon" asp-for="@Model.Name">
                                </div>
                            </div>

                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label>Yazar soyadı</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input type="text" class="form-control" id="first-name-icon" asp-for="@Model.Surname">
                                </div>
                            </div>
                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label>Kullanıcı Adı</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input type="text" class="form-control" id="first-name-icon" asp-for="@Model.UserName">
                                </div>
                            </div>
                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label>Yazar Email</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input type="email" class="form-control" id="first-name-icon" asp-for="@Model.Email">
                                </div>
                            </div>
                            <div class="form-group  row ">
                                <div class="col-2">
                                    <label> Sifre</label>
                                </div>
                                <div class="position-relative col-10">
                                    <input type="text" class="form-control" id="first-name-icon" asp-for="@Model.Password">
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary me-1 mb-1">
                                    <i class="bi bi-check-circle"></i> Kaydet
                                </button>
                                <a asp-action="Index" asp-controller="Author" asp-area="Admin" class="btn btn-primary-outline me-1 mb-1">
                                    <i class="bi bi-x-circle"></i> Vazgeç
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>