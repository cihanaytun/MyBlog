@{
    Layout = null;
    string hata = ViewBag.Hata;
}
@model LoginVM


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giris - MyBlog Admin Paneli</title>
    <link rel="stylesheet" href="~/assets/css/main/app.css">
    <link rel="stylesheet" href="~/assets/css/pages/auth.css">
    <link rel="shortcut icon" href="~/favicon.png" type="image/png">

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body>
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-8 col-8">
                <div id="auth-left">               
                    <h3 class="auth-title">Admin Paneline Giriş Yap</h3>
                    <form asp-action="Login" asp-controller="Login" asp-area="">
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-xl" placeholder="Kullanıcı Adı" asp-for="@Model.Email">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="password" class="form-control form-control-xl" placeholder="Şifre" asp-for="@Model.Password">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                        </div>
                        <div class="form-check form-check-lg d-flex align-items-start">
                            <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label text-gray-600" asp-for="@Model.RememberMe">
                                Beni hatırla
                            </label>
                        </div>
                        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Giris Yap</button>
                    </form>
                    <div class="text-center mt-5 text-lg fs-4">                 
                        <p><a class="font-bold" asp-action="Index" asp-controller="Home" asp-area="">Siteye Dön</a></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block">
                <div id="auth-right">
                </div>
            </div>
        </div>

    </div>




</body>

</html>
