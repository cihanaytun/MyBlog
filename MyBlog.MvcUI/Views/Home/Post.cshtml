@model Blog


<header class="masthead" style="background-image: url('@Model.ImagePath');background-size: 100% 100%; height:400px; ">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.SubTitle</h2>
                    <span class="meta">
                        <b>@Model.Author.Name @Model.Author.Surname</b> tarafından @Model.PublishDate.Value.ToShortDateString() tarihinde yayınlandı.
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container ">
    <article class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7 ">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </article>
</div>
